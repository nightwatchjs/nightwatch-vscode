{
	"name": "nightwatch",
	"displayName": "Nightwatch",
	"description": "Run Nightwatch tests in the Visual Studio Code",
	"icon": "",
	"version": "0.0.1",
	"preview": true,
	"publisher": "nightwatch-vscode",
	"author": {
		"name": "Vaibhav Singh",
		"email": "vaibhav.s@browserstack.com"
	},
	"qna": "",
	"license": "MIT",
	"homepage": "https://github.com/nightwatchjs/nightwatch-vscode",
	"repository": {
		"type": "git",
		"url": "https://github.com/nightwatchjs/nightwatch-vscode"
	},
	"bugs": {
		"url": "https://github.com/nightwatchjs/nightwatch-vscode/issues"
	},
	"engines": {
		"vscode": "^1.68.0"
	},
	"categories": [
		"Other",
		"Testing"
	],
	"activationEvents": [
		"onCommand:nightwatch.installNightwatch"
	],
	"main": "./dist/extension.js",
	"browser": "./dist/extension.js",
	"contributes": {
		"menus": {
			"commandPalette": [
				{
					"command": "nightwatch.installNightwatch",
					"group": "Test",
					"when": "!virtualWorkspace && shellExecutionSupported"
				}
			]
		},
		"commands": [
			{
				"category": "Test",
				"command": "nightwatch.installNightwatch",
				"title": "%nightwatch.command.nightwatch.installation.title%"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run package",
		"compile": "webpack",
		"watch": "webpack --watch",
		"package": "webpack --mode production --devtool hidden-source-map",
		"compile-tests": "tsc -p . --outDir out",
		"watch-tests": "tsc -p . -w --outDir out",
		"pretest": "npm run compile-tests && npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.2.0",
		"@types/mocha": "^9.1.1",
		"@types/node": "16.x",
		"@types/vscode": "^1.68.0",
		"@typescript-eslint/eslint-plugin": "^5.27.0",
		"@typescript-eslint/parser": "^5.27.0",
		"@vscode/test-electron": "^2.1.3",
		"eslint": "^8.16.0",
		"glob": "^8.0.3",
		"mocha": "^10.0.0",
		"ts-loader": "^9.3.0",
		"typescript": "^4.7.4",
		"webpack": "^5.72.1",
		"webpack-cli": "^4.9.2",
		"vscode-nls": "^5.0.1",
		"vscode-nls-dev": "^4.0.0"
	}
}
